<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="true" />
    <constant name="struts.devMode" value="true" />

    <package name="default" namespace="/" extends="struts-default">
<!--
        <default-action-ref name="index" />
 
        <global-results>
            <result name="error">error11.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error"/>
        </global-exception-mappings>
         -->
		<!-- 登录 -->
        <action name="login" class="com.song.struts.LoginAction" method="login">
            <result name="success" type="chain">
                <param name="actionName">index</param>
                <param name="namespace">/index</param>
            </result>
            <result name="false">/login.jsp</result>
        </action>
        

    </package>
	
    <!-- 首页 -->
    <package name="index" namespace="/index" extends="struts-default">
        <action name="index" class="com.song.struts.IndexAction" method="loadIndexData">
            <result name="success">/view/main.jsp</result>
            <result name="false">/error.jsp</result>
        </action>
    </package>
    
    <!-- 文章 -->
    <package name="article" namespace="/article" extends="struts-default">
         <action name="article_*" class="com.song.struts.ArticleAction" method="{1}">
            <result name="list">/article/articlelist.jsp?page=1</result>
            <result name="write">/article/articleadd.jsp</result>
            <result name="single">/article/articlesingle.jsp</result>
            <result name="noarticle">/error.jsp?info=文章不存在</result>
        </action>
    </package>

    <!-- Add packages here -->

</struts>
